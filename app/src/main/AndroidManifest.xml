<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.hultron.lifehelper">

    <!-- 读取日志 -->
    <uses-permission android:name="android.permission.READ_LOGS"/>
    <!--允许联网 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <!--保持 CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <!--读写sd卡的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <!--允许读取手机状态 用于创建 BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <!--语音识别权限列表-->
    <!--获取手机录音机使用权限，听写、识别、语义理解需要用到此权限 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <!--允许程序改变网络连接状态 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <!--读取联系人权限，上传联系人需要用到此权限 -->
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <!--短信权限-->
    <uses-permission android:name="android.permission.RECEIVE_SMS"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <!--窗口权限-->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <!--照相机-->
    <uses-permission android:name="android.permission.CAMERA"/>


    <!--百度地图所需权限，已删除重复部分-->
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.GET_TASKS"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>

    <!-- 这个权限用于进行网络定位-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <!-- 这个权限用于访问GPS定位-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <!-- SD卡读取权限，用户写入离线定位数据-->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

    <application
        android:name=".application.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <!--主页-->
        <activity
            android:name=".MainActivity"
            android:theme="@style/MainActivityNoActionBar">
        </activity>


        <!--设置-->
        <activity
            android:name=".ui.SettingActivity"
            android:label="@string/text_setting"/>

        <!--闪屏页，程序入口-->
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/NoActionBarFullScreen">
        </activity>

        <!--引导页-->
        <activity
            android:name=".ui.GuideActivity"
            android:theme="@style/NoActionBarFullScreen"/>

        <!--登陆-->
        <activity
            android:name=".ui.LoginActivity">
        </activity>

        <!--注册-->
        <activity
            android:name=".ui.RegisterActivity"
            android:label="@string/register"/>

        <!--忘记密码-->
        <activity
            android:name=".ui.ForgetPasswordActivity"
            android:label="@string/forget_pass"/>

        <!--快递查询-->
        <activity
            android:name=".ui.CourierActivity"
            android:label="快递查询"/>

        <!--归属地查询-->
        <activity
            android:name=".ui.PhoneActivity"
            android:label="归属地查询"/>

        <!--天气查询-->
        <activity
            android:name=".ui.WeatherActivity"
            android:label="天气查询"
            android:theme="@style/WeatherScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!--新闻详情-->
        <activity android:name=".ui.NewsContentActivity"/>

        <!--下载新版本-->
        <activity android:name=".ui.UpdateActivity"/>

        <!--分享二维码-->
        <activity
            android:name=".ui.QrCodeShareActivity"
            android:label="我的二维码"/>

        <!--我的位置-->
        <activity
            android:name=".ui.LocationActivity"
            android:label="我的位置"/>

        <!--关于软件-->
        <activity
            android:name=".ui.AboutSoftwareActivity"
            android:label="关于软件"/>

        <!--个人中心-->
        <activity
            android:name=".ui.UserActivity"
            android:label="个人中心"/>

        <!--短信服务-->
        <service android:name=".service.SmsService"/>

        <!--定位服务-->
        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote">
        </service>


        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.hultron.smartbulter.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"/>
        </provider>

        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="5GPKgGRH6LFO9pf9CCT3Rnnlx7BgZLXx"/>

    </application>

</manifest>